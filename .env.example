# Azure OpenAI Primary Configuration (shared-openai-eastus2)
# NOTE: Set these from shared Azure resources via local .env.local, GitHub Secrets, or Azure app settings (no Key Vault).

# Azure OpenAI Core Configuration
AZURE_OPENAI_ENDPOINT=https://shared-openai-eastus2.openai.azure.com/
AZURE_OPENAI_API_KEY=<PASTE_SHARED_AZURE_OPENAI_KEY>
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Standardized deployments
AZURE_OPENAI_DEPLOYMENT_CHAT=gpt-5.1-mini
AZURE_OPENAI_DEPLOYMENT_IMAGE=gpt-image-1-mini
AZURE_OPENAI_DEPLOYMENT_EMBEDDINGS=text-embedding-3-small

# Optional fallback to public OpenAI (keep server-side only)
OPENAI_API_KEY=<OPTIONAL_PUBLIC_OPENAI_KEY>
OPENAI_BASE_URL=https://api.openai.com/v1

# Azure AI Services Configuration (shared-openai-eastus2)
AZURE_AI_ENDPOINT=https://shared-openai-eastus2.cognitiveservices.azure.com/
AZURE_AI_KEY=<PLACEHOLDER_AZURE_AI_KEY>

# Azure Speech Services
AZURE_SPEECH_ENDPOINT=https://shared-openai-eastus2.cognitiveservices.azure.com/
AZURE_SPEECH_KEY=<PLACEHOLDER_AZURE_AI_KEY>

# Azure Vision Services
AZURE_VISION_ENDPOINT=https://shared-openai-eastus2.cognitiveservices.azure.com/
AZURE_VISION_KEY=<PLACEHOLDER_AZURE_AI_KEY>

# Azure Document Intelligence
AZURE_DOCINT_ENDPOINT=https://shared-openai-eastus2.cognitiveservices.azure.com/
AZURE_DOCINT_KEY=<PLACEHOLDER_AZURE_AI_KEY>

# Azure Language Services
AZURE_LANGUAGE_ENDPOINT=https://shared-openai-eastus2.cognitiveservices.azure.com/
AZURE_LANGUAGE_KEY=<PLACEHOLDER_AZURE_AI_KEY>

# Azure Content Understanding
AZURE_CONTENT_UNDERSTAND_ENDPOINT=https://shared-openai-eastus2.cognitiveservices.azure.com/
AZURE_CONTENT_UNDERSTAND_KEY=<PLACEHOLDER_AZURE_AI_KEY>

# Azure Storage
AZURE_STORAGE_ACCOUNT=stmahumsharedapps
AZURE_STORAGE_CONNECTION_STRING=<AZURE_STORAGE_CONNECTION_STRING>
AZURE_STORAGE_CONTAINER=headshots

# Repository-Specific Configuration
APP_ENV=local
PUBLIC_APP_NAME=ProfilePerfect AI
PUBLIC_APP_URL=http://localhost:3000

# App-specific containers
APP_BLOB_CONTAINER_UPLOADS=profileperfect-uploads
APP_BLOB_CONTAINER_GENERATED=profileperfect-generated

# POSTGRES (Shared server, app-specific DB)
POSTGRES_HOST=pg-shared-apps-eastus2.postgres.database.azure.com
POSTGRES_PORT=5432
POSTGRES_DB=profileperfect_db
POSTGRES_USER=profileperfect_app
POSTGRES_PASSWORD=<STRONG_UNIQUE_PASSWORD>
POSTGRES_SSLMODE=require

# Common Postgres URL (used by pg / Prisma / Drizzle)
DATABASE_URL=postgresql://profileperfect_app:<STRONG_UNIQUE_PASSWORD>@pg-shared-apps-eastus2.postgres.database.azure.com:5432/profileperfect_db?sslmode=require

# STRIPE (optional for credits/payment)
STRIPE_SECRET_KEY=<YOUR_STRIPE_SECRET_KEY>
STRIPE_WEBHOOK_SECRET=<YOUR_STRIPE_WEBHOOK_SECRET>

# MISC
LOG_LEVEL=debug
